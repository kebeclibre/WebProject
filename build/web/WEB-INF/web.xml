<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AllBooksServlet</servlet-name>
        <servlet-class>servlet.AllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>allBooksServ</servlet-name>
        <servlet-class>servlet.allBooksServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAuthor</servlet-name>
        <servlet-class>servlet.viewAuthor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>servlet.AddBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAuthorToBook</servlet-name>
        <servlet-class>servlet.AddAuthorToBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAuthor</servlet-name>
        <servlet-class>servlet.AddAuthor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allBooksServ</servlet-name>
        <url-pattern>/allBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAuthor</servlet-name>
        <url-pattern>/viewAuthors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/AddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAuthorToBook</servlet-name>
        <url-pattern>/AddAuthorToBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAuthor</servlet-name>
        <url-pattern>/AddAuthor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
